<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#D5F5E3"
                                             tools:context=".perfilFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Edad"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginTop="16dp"
            android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Estatura cm"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_marginTop="16dp"
            android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Peso"
            android:ems="10"
            android:id="@+id/editText4" android:layout_marginTop="16dp"
            android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            app:layout_constraintTop_toBottomOf="@+id/editText3"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>



    <TextView
            android:text="Actividad fisica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/editText"
            android:layout_marginStart="8dp"/>
    <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/editText"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView4">

        <RadioButton
                android:text="Baja"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:id="@+id/RadioButton3" android:layout_weight="1"/>
        <RadioButton
                android:text="Media"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:id="@+id/RadioButton4" android:layout_weight="1"/>

        <RadioButton
                android:text="Alta"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:id="@+id/RadioButton5" android:layout_weight="1"/>
        <RadioButton
                android:text="Intensa"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:id="@+id/RadioButton6" android:layout_weight="1"/>
        <RadioButton
                android:text="Extrema"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:id="@+id/RadioButton7" android:layout_weight="1"/>

    </RadioGroup>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout7"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0">
        <TextView
                android:text="Sexo"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                tools:layout_editor_absoluteY="276dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/radioGroup" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/linearLayout7"/>
        <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="276dp" tools:layout_editor_absoluteX="152dp">
            <RadioButton
                    android:text="Hombre"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
                    android:textColor="@android:color/background_dark"
                    android:id="@+id/RadioButton1" android:layout_weight="1"/>
            <RadioButton
                    android:text="Mujer"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
                    android:textColor="@android:color/background_dark"
                    android:id="@+id/RadioButton2" android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>
    <Button
            android:text="Intruducir o modificar perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AED6F1"
            android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
            android:id="@+id/buttonPerfil"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout7"/>
</android.support.constraint.ConstraintLayout>