<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#FAAC58"
                                             tools:context=".platosFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">
        <EditText
                android:layout_width="408dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Plato nuevo"
                android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:layout_margin="5dp"
                android:ems="10"
                android:id="@+id/editText1"/>
        <EditText
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Calorias"
                android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:layout_margin="5dp"
                android:ems="10"
                android:id="@+id/editText2"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="362dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    />
    <Button
            android:text="AÃ±adir"
            android:background="#DC7633"
            android:layout_width="145dp"
            android:layout_height="52dp"
            android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
            android:id="@+id/buttonInsert" app:layout_constraintStart_toEndOf="@+id/linearLayout"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Eliminar"
            android:background="#DC7633"
            android:layout_width="145dp"
            android:layout_height="52dp"
            android:fontFamily="cursive" android:textSize="18sp" android:textStyle="bold"
            android:id="@+id/buttonDelete" app:layout_constraintStart_toEndOf="@+id/linearLayout"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/buttonInsert"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView2" app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>